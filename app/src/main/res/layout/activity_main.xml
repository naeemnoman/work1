<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/pic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <!-- Greeting text -->

        <!-- Email EditText -->

        <TextView
            android:id="@+id/tv_greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="Hi!"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.145"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/view2"
            android:layout_width="389dp"
            android:layout_height="455dp"
            android:background="#4D4B4444"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.302" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:backgroundTint="@color/white"
            android:hint="Enter your Mail"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_greeting"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"/>


        <!-- Continue button -->
        <Button
            android:id="@+id/btn_continue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="Continue"
            android:textColor="#000000"
            android:background="#000000"
            app:layout_constraintTop_toBottomOf="@id/et_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp" />

        <!-- OR text -->
        <TextView
            android:id="@+id/tv_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:textColor="#000"
            app:layout_constraintTop_toBottomOf="@id/btn_continue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"/>

        <!-- Facebook button -->

        <Button
            android:id="@+id/btn_facebook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:backgroundTint="@color/white"
            android:drawableStart="@drawable/fb"
            android:gravity="center"
            android:text="Continue with Facebook"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_or" />

        <!-- Google button -->
        <ImageView
            android:layout_width="37dp"
            android:layout_height="30dp"
            android:padding="2dp"
            android:src="@drawable/fb"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="312dp" />

        <Button
            android:id="@+id/btn_google"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="Continue with Google"
            android:drawableStart="@drawable/google"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@id/btn_facebook"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"/>

        <!-- Apple button -->

        <ImageView
            android:layout_width="37dp"
            android:layout_height="30dp"
            android:padding="2dp"
            android:src="@drawable/google"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="368dp" />

        <Button
            android:id="@+id/btn_apple"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="Continue with Apple"
            android:drawableStart="@drawable/social"
            android:background="@color/black"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@id/btn_google"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"/>

        <!-- Sign Up link -->

        <!-- Forgot password link -->

        <ImageView
            android:layout_width="37dp"
            android:layout_height="30dp"
            android:padding="2dp"
            android:src="@drawable/social"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="418dp" />

        <TextView
            android:id="@+id/tv_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Don't have an account? Sign Up"
            android:textColor="#000"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.147"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_apple" />

        <TextView
            android:id="@+id/tv_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foget your password"
            android:textColor="#05ED75"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tv_signup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="549dp" />


</androidx.constraintlayout.widget.ConstraintLayout>